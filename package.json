{
  "name": "osiri-landing-page",
  "description": "Global news reader with AI-powered summarization and translation capabilities",
  "author": {
    "name": "DigDaTech",
    "url": "https://osiri.xyz"
  },
  "license": "MIT",
  "keywords": [
    "news-reader",
    "startup-news",
    "ai-summarization",
    "global-news",
    "multilingual"
  ],
  "private": true,
  "version": "0.1.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "i18next-extract": "babel 'src/**/*.{js,jsx,ts,tsx}' --config-file ./babel.config.cjs --extensions '.js,.jsx,.ts,.tsx' --out-file /dev/null",
    "supabase:start": "supabase start",
    "supabase:dev": "supabase functions serve --no-verify-jwt --env-file .env --debug",
    "supabase:stop": "supabase stop",
    "supabase:test": "cd supabase/functions && deno task test",
    "heroku:start": "node heroku/dist/app.js",
    "heroku:build": "tsc --project heroku/tsconfig.json",
    "heroku:dev": "cd heroku && pnpm ts-node-dev ./src/app.ts",
    "heroku:test": "cd heroku && pnpm jest",
    "start:all": "npm-run-all --parallel supabase:start heroku:start",
    "stop:all": "npm-run-all --parallel supabase:stop",
    "test:all": "npm-run-all --parallel lint supabase:test heroku:test"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.11.9",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@supabase/auth-js": "2.65.1",
    "@supabase/functions-js": "2.4.3",
    "@supabase/node-fetch": "2.6.15",
    "@supabase/postgrest-js": "1.16.3",
    "@supabase/realtime-js": "^2.10.9",
    "@supabase/storage-js": "2.7.1",
    "@supabase/supabase-js": "^2.46.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "i18next": "^23.16.5",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^2.6.2",
    "lucide-react": "^0.424.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.1.1",
    "react-router-dom": "^6.28.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/plugin-syntax-jsx": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "babel-plugin-i18next-extract": "^0.10.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "i18next-parser": "^9.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.13"
  }
}
